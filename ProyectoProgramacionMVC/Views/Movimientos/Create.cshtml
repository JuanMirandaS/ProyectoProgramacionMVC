        background-position: center;
        height: 100vh;
        overflow: hidden;
    }

    .menu {
        background-color: #800080;
        width: 100%;
        text-align: center;
        padding: 10px 0;
    }

        .menu a {
            color: white;
            margin: 0 20px;
            text-decoration: none;
            font-size: 18px;
        }

    .user-form {
        background-color: #800080;
        padding: 20px;
        border-radius: 8px;
        margin-top: 20px;
        color: white;
        width: 300px;
        text-align: center;
    }

        .user-form h2 {
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
