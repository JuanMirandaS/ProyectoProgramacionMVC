@model IEnumerable<ProyectoProgramacionMVC.Models.Modelo>

@{
    ViewData["Title"] = "Modelos";
}

<div class="container">
    <div class="model-list">
        <h2>Lista de Modelos</h2>

        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Modelo</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.Marca)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Marca.MarcaId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ModeloId" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.ModeloId" class="btn btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.ModeloId" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .model-list {
        background-color: #800080;
        padding: 20px;
        border-radius: 8px;
        color: white;
        width: 80%;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
    }

    .table th, .table td {
        color: white;
    }

    .btn {
        margin-right: 5px;
    }
</style>
