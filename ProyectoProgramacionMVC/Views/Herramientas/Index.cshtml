@model IEnumerable<ProyectoProgramacionMVC.Models.Herramientum>

@{
    ViewData["Title"] = "Index";
}

<h1>Modulo de gestion de herramientas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear herramienta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo.ModeloId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.HerramientaId" class="btn btn-dark">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.HerramientaId" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.HerramientaId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
