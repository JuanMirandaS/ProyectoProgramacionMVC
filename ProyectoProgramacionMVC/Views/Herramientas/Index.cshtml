@model IEnumerable<ProyectoProgramacionMVC.Models.Herramientum>

@{
    ViewData["Title"] = "Herramientas";
}

<div class="container">
    <div class="tool-list">
        <h2>Lista de Herramientas</h2>

        <a asp-action="Create" class="btn btn-primary">Crear Nueva Herramienta</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NumeroSerie)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                    <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NumeroSerie)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                        <td>@Html.DisplayFor(modelItem => item.Modelo.ModeloId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.HerramientaId" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.HerramientaId" class="btn btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.HerramientaId" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .tool-list {
        background-color: #800080;
        padding: 20px;
        border-radius: 8px;
        color: white;
        width: 80%;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
    }

    .table th, .table td {
        color: white;
    }

    .btn {
        margin-right: 5px;
    }
</style>
